{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "target": "ES2015",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "rootDir": "./src/",
      "allowJs": true,
      "noImplicitAny": false,
      "declaration": true,
      "declarationDir": "./dist",
    "strictNullChecks": false
    },
    "ts-node": {
      "esm": true,
      "transpileOnly": true,
      "experimentalSpecifierResolution": "node"
    },
    "exclude": ["node_modules", "features/", "examples", "dist"]
  }