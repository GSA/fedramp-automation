{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2015",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./",
    "allowJs": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist",
    "strictNullChecks": false
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "features/**/*"],
  "exclude": ["node_modules", "dist"]
}